{
  "name": "znotion",
  "version": "0.1.0",
  "description": "Cliente Node.js moderno e tipado para a API do Notion, com suporte a webhooks, coment√°rios e pagina√ß√£o autom√°tica",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "README.pt-br.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "commit": "git-cz",
    "release": "standard-version",
    "docs": "typedoc --out docs/api src",
    "clean": "rimraf dist coverage docs/api",
    "prebuild": "npm run clean",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyllas/znotion.git"
  },
  "keywords": [
    "notion",
    "api",
    "client",
    "typescript",
    "nodejs",
    "database",
    "pages",
    "blocks",
    "comments",
    "webhooks"
  ],
  "author": "Cyllas <cyllas@exemplo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cyllas/znotion/issues"
  },
  "homepage": "https://github.com/cyllas/znotion#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "‚ú® Novas Funcionalidades"
      },
      {
        "type": "fix",
        "section": "üêõ Corre√ß√µes de Bugs"
      },
      {
        "type": "docs",
        "section": "üìö Documenta√ß√£o"
      },
      {
        "type": "style",
        "section": "üíé Estilos"
      },
      {
        "type": "refactor",
        "section": "‚ôªÔ∏è Refatora√ß√£o"
      },
      {
        "type": "perf",
        "section": "‚ö°Ô∏è Performance"
      },
      {
        "type": "test",
        "section": "‚úÖ Testes"
      },
      {
        "type": "build",
        "section": "üì¶ Build"
      },
      {
        "type": "ci",
        "section": "üë∑ CI"
      },
      {
        "type": "chore",
        "section": "üîß Chore"
      }
    ],
    "commitUrlFormat": "https://github.com/cyllas/znotion/commit/{{hash}}",
    "compareUrlFormat": "https://github.com/cyllas/znotion/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "https://github.com/cyllas/znotion/issues/{{id}}",
    "userUrlFormat": "https://github.com/{{user}}"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-joi-validation": "^5.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "standard-version": "^9.3.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.27.6",
    "typescript": "^5.3.3"
  }
}
